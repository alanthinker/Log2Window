<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <targets>
    <target name="console" xsi:type="Console" layout="${message}" />
    <target name="udp" xsi:type="NLogViewer" address="udp4://localhost:7071" />
    <target name="tcp" xsi:type="NLogViewer" address="tcp4://localhost:4505" />
    <target name="log4jfile" xsi:type="File" fileName="${basedir}/Logs/log4jfile.log" layout="${log4jxmlevent}" />    
  </targets>

  <rules>
    <logger name="*" minlevel="Trace" writeTo="tcp" />
    <!--<logger name="*" minlevel="Trace" writeTo="log4jfile" />-->
  </rules>
</nlog>
